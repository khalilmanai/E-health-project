                  <Font name="Poppins Light" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <PasswordField fx:id="passwordInput" layoutX="135.0" layoutY="407.0" prefWidth="260.0" promptText="password" style="-fx-background-radius: 25; -fx-pref-width: 300; -fx-pref-height: 45;">
