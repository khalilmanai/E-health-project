      <AnchorPane layoutX="-6.0" prefHeight="700.0" prefWidth="540.0">
         <children>
            <HBox alignment="CENTER" layoutX="52.0" layoutY="23.0">
               <children>
                  <Label alignment="CENTER" text="Nutri">
                     <font>
                        <Font name="Poppins Black" size="14.0" />
