                  <Cursor fx:constant="TEXT" />
               </cursor>
               <font>
                  <Font name="Poppins Light" size="12.0" />
               </font>
            </PasswordField>
            <Button fx:id="connectBtn" alignment="CENTER" layoutX="135.0" layoutY="517.0" mnemonicParsing="false" onMouseClicked="#createAccount" style="-fx-background-color: EC744A; -fx-text-fill: FFFFFF; -fx-background-radius: 25; -fx-pref-width: 300; -fx-pref-height: 45;" text="Créer Compte">
               <font>
                  <Font name="Poppins Medium" size="14.0" />
               </font>
