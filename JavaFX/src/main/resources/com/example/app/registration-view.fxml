            </ImageView>
            <Label layoutX="14.0" layoutY="659.0" text="copyright  © 2024 by Members-Only">
               <font>
                  <Font name="Poppins Medium" size="10.0" />
               </font>
            </Label>
            <AmbientLight color="CHARTREUSE" lightOn="true" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="createAccount" layoutX="546.0" prefHeight="700.0" prefWidth="540.0">
         <children>
            <Label alignment="CENTER" layoutX="104.0" layoutY="193.0" text="Bienvenue dans votre allié de bien être">
               <font>
                  <Font name="Poppins Black" size="18.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" layoutX="229.0" layoutY="220.0">
               <children>
                  <Label alignment="CENTER" text="Nutri">
                     <font>
                        <Font name="Poppins Black" size="24.0" />
                     </font>
                  </Label>
                  <Label text="NET" textFill="#7bc7a8">
                     <font>
                        <Font name="Poppins Black" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextField fx:id="emailInput" layoutX="135.0" layoutY="297.0" prefWidth="300.0" promptText="adresse e-mail" style="-fx-background-radius: 25; -fx-pref-width: 300; -fx-pref-height: 45;">
