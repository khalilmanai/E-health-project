                  <Font name="Poppins Light" size="12.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="TEXT" />
               </cursor>
            </TextField>
            <TextField fx:id="userNameInput" layoutX="135.0" layoutY="350.0" prefWidth="312.0" promptText="Nom d'utilisateur" style="-fx-background-radius: 25; -fx-pref-width: 300; -fx-pref-height: 45;">
