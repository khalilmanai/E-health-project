<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF; -fx-pref-width: 1080; -fx-pref-height: 700; " xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.AdministratorMainController">

    <!-- Left Panel for Options -->
    <VBox alignment="CENTER" layoutY="-1.0" prefHeight="702.0" prefWidth="218.0" spacing="20.0" style="-fx-background-color: #7bc7a8; -fx-padding: 20px;">
        <!-- Manage Users Button -->
        <Button onAction="#handleManageUsersButtonClicked" style="-fx-background-color: #7bc7a8; -fx-text-fill: white; -fx-font-size: 16;" text="Gérer Utilisateur" />

        <!-- Manage Products Button -->
        <Button onAction="#handleManageProductsButtonClicked" style="-fx-background-color: #7bc7a8; -fx-text-fill: white; -fx-font-size: 16;" text="Gérer Produits" />

        <!-- Manage Deliveries Button -->
        <Button onAction="#handleManageDeliveriesButtonClicked" style="-fx-background-color: #7bc7a8; -fx-text-fill: white; -fx-font-size: 16;" text="Gérer Livraisons" />

        <!-- Manage Articles Button -->
        <Button onAction="#handleManageArticlesButtonClicked" style="-fx-background-color: #7bc7a8; -fx-text-fill: white; -fx-font-size: 16;" text="Gérer Articles" />
      <Button mnemonicParsing="false" onAction="#disconnect" style="-fx-background-color: orange; -fx-pref-width: 200; -fx-pref-height: 45; -fx-background-radius: 20;" text="se Déconnecter" textFill="WHITE">
         <font>
            <Font name="Poppins Bold" size="12.0" />
         </font>
      </Button>
    </VBox>

    <!-- Content - Scrollable Area -->
    <ScrollPane fx:id="contentScrollPane" layoutX="218.0" layoutY="-1.0" prefHeight="702.0" prefWidth="873.0" style="-fx-padding: 20px;">
        <VBox spacing="20.0">
            <!-- Content will be loaded dynamically here -->
        </VBox>
    </ScrollPane>
</AnchorPane>
