                           <cursor>
                              <Cursor fx:constant="TEXT" />
                           </cursor>
                        </TextField>
                     <Label fx:id="emailLabelWarning" prefHeight="18.0" prefWidth="264.0" />
                        <PasswordField fx:id="passwordInput" focusTraversable="false" prefHeight="16.0" prefWidth="162.0" promptText="password" style="-fx-background-radius: 25; -fx-pref-width: 300; -fx-pref-height: 45;">
