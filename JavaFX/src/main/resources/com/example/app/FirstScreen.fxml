                  <Label alignment="CENTER" layoutX="97.0" layoutY="153.0" text="Bienvenue dans votre allié de bien être">
                  <font>
                     <Font name="Poppins Black" size="18.0" />
                  </font>
                  </Label>
                  <HBox alignment="CENTER" layoutX="212.0" layoutY="181.0">
                     <children>
                        <Label text="Nutri">
                           <font>
                              <Font name="Poppins Black" size="24.0" />
                           </font>
                        </Label>
                        <Label text="NET" textFill="#7bc7a8">
                           <font>
                              <Font name="Poppins Black" size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               <VBox alignment="CENTER" layoutX="118.0" layoutY="223.0" prefHeight="374.0" prefWidth="338.0" spacing="5.0">
