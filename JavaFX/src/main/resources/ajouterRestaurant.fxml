<AnchorPane prefHeight="400.0" prefWidth="603.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.app.controllers.AjouterRestaurantController">
   <children>
      <Label layoutX="316.0" layoutY="135.0" text="Nom  :" textFill="#007d6e">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label layoutX="316.0" layoutY="172.0" text="Adresse :" textFill="#007d6e">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label layoutX="317.0" layoutY="207.0" text="Téléphone :" textFill="#007d6e">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <Label layoutX="314.0" layoutY="243.0" text="Description :" textFill="#007d6e">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="tfnom" layoutX="417.0" layoutY="131.0" prefHeight="25.0" prefWidth="156.0" promptText="nom du restaurant" style="-fx-background-radius: 20;" />
      <TextField fx:id="tfadresse" layoutX="417.0" layoutY="168.0" prefHeight="25.0" prefWidth="156.0" promptText="adresse" style="-fx-background-radius: 20;" />
      <TextField fx:id="tftel" layoutX="418.0" layoutY="203.0" prefHeight="19.0" prefWidth="156.0" promptText="téléphone" style="-fx-background-radius: 20;" />
      <TextField fx:id="tfdescription" layoutX="417.0" layoutY="239.0" prefHeight="25.0" prefWidth="156.0" promptText="description" style="-fx-background-radius: 20;" />
      <Separator layoutX="225.0" orientation="VERTICAL" prefHeight="406.0" prefWidth="15.0" />
      <HBox layoutX="60.0" layoutY="15.0">
         <children>
            <Label text="Nutri">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text="NET" textFill="#007d6e">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <ImageView fitHeight="217.0" fitWidth="219.0" layoutX="8.0" layoutY="82.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/com/example/app/images/Restaurant.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="42.0" fitWidth="34.0" layoutX="9.0" layoutY="11.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/com/example/app/images/LOGO.png" />
         </image>
      </ImageView>
      <Button fx:id="home" layoutX="8.0" layoutY="364.0" mnemonicParsing="false" onAction="#goToHome" style="-fx-background-color: #007D6E; -fx-background-radius: 20;" text="Home" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <ButtonBar layoutX="353.0" layoutY="307.0" prefHeight="40.0" prefWidth="182.0">
        <buttons>
          <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#addResto" style="-fx-background-color: #EC744A; -fx-background-radius: 9;" text="Ajouter" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnClear" layoutX="271.0" layoutY="18.0" mnemonicParsing="false" onAction="#clearField" style="-fx-background-color: #EC744A; -fx-background-radius: 9;" text="Annuler" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
        </buttons>
      </ButtonBar>
      <Label layoutX="313.0" layoutY="49.0" text="Gestion des restaurants" textFill="#ec744a">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
