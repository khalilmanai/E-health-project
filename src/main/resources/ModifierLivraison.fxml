    <Label text="Modifier Livraison" />

    <Label text="Nom" />
    <TextField fx:id="nomTextField" />

    <Label text="Adresse" />
    <TextField fx:id="adresseTextField" />

    <Label text="Numéro de téléphone" />
    <TextField fx:id="numeroTextField" />

    <Button fx:id="enregister_id" onAction="#enregistrerModification" text="Enregistrer" />
</VBox>
